---
import Typography from '@/atoms/typography.astro';

export interface Props extends astroHTML.JSX.HTMLAttributes {
  startDate: Date;
  endDate: Date;
}
const { startDate, endDate, ...props } = Astro.props;
const getFormattedDate = (date: Date): string =>
  new Intl.DateTimeFormat('en-US', { month: 'long' }).format(date).concat(' ', date.getFullYear().toString());
---

<Typography variant="item-subtitle" class:list={[props.class]}>
  {getFormattedDate(startDate).concat(' - ', endDate ? getFormattedDate(endDate) : 'Now')}
</Typography>
