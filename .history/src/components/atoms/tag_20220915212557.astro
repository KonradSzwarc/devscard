---
export interface Props extends astroHTML.JSX.HTMLAttributes {}

const { props } = Astro;
---

<tag
  type="span"
  {...props}
  class:list={[
    'inline-flex items-center text-base font-medium rounded-md text-black bg-gray-300 active:translate-y-px focus:outline-none',
    props.class,
  ]}
  ><slot />
</tag>
