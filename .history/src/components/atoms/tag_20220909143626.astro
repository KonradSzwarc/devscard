---
export interface Props extends astroHTML.JSX.HTMLAttributes {}

const { props } = Astro;
---

<tag
    type="span"
    {...props}
    class:list={[
        'text-black text-center text-base text-sm font-medium align-middle rounded border-x-4 bg-gray-200',
        props.class,
    ]}
    ><slot />
</tag>
