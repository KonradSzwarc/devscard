---
export interface Props extends astroHTML.JSX.HTMLAttributes {}

const { props } = Astro;
---

<tag
type="span"
{...props}
    class:list={[
        'inline-flex text-black text-center text-base text-sm font-medium align-middle rounded border-x-8 bg-gray-200',
        props.class,
    ]}
    ><slot />
</tag>
