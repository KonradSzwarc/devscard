---
export interface Props extends astroHTML.JSX.HTMLAttributes {}

const { props } = Astro;
---

<tag
    type="span"
    {...props}
    class:list={[
        'inline-flex items-center px-2 h-6 text-base font-medium rounded-md shadow-sm text-black bg-gray-200',
        props.class,
    ]}
    ><slot />
</tag>
